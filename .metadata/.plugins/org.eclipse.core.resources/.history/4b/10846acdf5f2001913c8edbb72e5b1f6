	<script>
		$('div#imagebox').css({
			'width' : '100%',
			'maxWidth' : 'none',
			'height' : '250px'
		})
		$('img#picturebox').css({
			'width' : '100%',
			'maxWidth' : 'none',
			'height' : '250px'
		})
		$('div#divbox').css({
			'width' : '100%',
			'maxWidth' : 'none',
			'height' : '250px'
		})
		$('img.mfp-img').css({
			'width' : '100%',
			'maxWidth' : 'none',
			'height' : '250px'
		})
		$('input#EMAIL').css({
			'color':'black',
			'font-weight':'bold'
		})
		$('textarea#COMMENTS').css({
			'color':'black',
			'font-weight':'bold',
			'font-size':'1em'
		})
		$('input#COMMENTSDATE').css({
			'color':'black',
			'font-weight':'bold'
		})
		$('p#commentsview').css({
			'color':'#a8733e',
			'font-weight':'bold'
		})
		$('div#commentsbox').css({
			'text-align':'center',
			'border':'2px solid #6B4928'
		})
		$('div#commentList').css({
			'margin':'0 auto'
		})
		$('span#cCnt').css({
			'font-size':'3em',
			'font-weight':'bold'
		})
		$('span#unit').css({
			'font-size':'1em',
			'font-weight':'bold'
		})
		$('h4#h4text').css({
